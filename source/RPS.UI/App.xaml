<Application x:Class="RPS.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/LoginView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/ExpressionDark.xaml"/>        
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />

            <SolidColorBrush x:Key="WinningBackgroundBrush" Color="#3C00FF14" />
            <SolidColorBrush x:Key="LosingBackgroundBrush" Color="#3CFF0000" />
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
